<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>FC-SF-SecUtils-Target-Basic-Auth</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows/>
    <HTTPTargetConnection> 
      <LoadBalancer>
        <Server name="{{ target_server }}"/>
      </LoadBalancer>
        <SSLInfo>
            <Enabled>{{ target_server_protocol }}</Enabled>
        </SSLInfo>
	  <Path>{{target_server_base_path}}</Path>
    </HTTPTargetConnection>
</TargetEndpoint>